<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="193dp"
        android:layout_height="73dp"
        android:layout_alignLeft="@+id/bt_text_search"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bt_text_search"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:text="文字搜尋"
        android:textSize="45sp"
        />

    <Button
        android:id="@+id/bt_text_search"
        android:layout_width="271dp"
        android:layout_height="86dp"
        android:layout_alignLeft="@+id/edt_text_search"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edt_text_search"
        android:layout_marginStart="80dp"
        android:layout_marginTop="64dp"
        android:text="文字搜尋"
        android:textSize="46sp"
         />

    <EditText
        android:id="@+id/edt_text_search"
        android:layout_width="298dp"
        android:layout_height="72dp"
        android:layout_above="@+id/bt_text_search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="35sp"
         />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="請輸入關鍵字:"
        android:textSize="35sp"
         />
</RelativeLayout>