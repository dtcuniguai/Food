<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:padding="15dp">

        <ImageView
            android:id="@+id/resImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0.11" />

        <TextView
            android:id="@+id/Name"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/resImage"
            android:layout_toRightOf="@+id/resImage"
            android:textColor="#333"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/res_Address"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Name"
            android:layout_toEndOf="@+id/resImage"
            android:layout_toRightOf="@+id/resImage"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:textColor="#333" />

        <TextView
            android:id="@+id/res_Tel"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/res_Address"
            android:layout_toEndOf="@+id/resImage"
            android:layout_toRightOf="@+id/resImage"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:textColor="#333" />

        <TextView
            android:id="@+id/res_Pic"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/res_Tel"
            android:layout_toEndOf="@+id/resImage"
            android:layout_toRightOf="@+id/resImage"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:textColor="#333" />
    </RelativeLayout>
















</android.support.constraint.ConstraintLayout>